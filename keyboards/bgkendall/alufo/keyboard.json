{
    "keyboard_name": "Alufo",
    "bootloader_instructions": "Hold BOOT switch on bottom of PCB while connecting USB cable"
    "processor": "STM32G431",
    "bootloader": "stm32-dfu",
    "usb": {
        "pid": "0xAF00",
        "device_version": "1.1.0"
        "max_power": 100
    },
    "build": {
        "lto": true
    },
    "features": {
        "audio": false,
        "backlight": false,
        "bluetooth": false,
        "bootmagic": false,
        "bootmagic_lite": true,
        "combo": false,
        "command": false,
        "console": false,
        "encoder": false,
        "encoder_map": false,
        "extrakey": true,
        "magic": false,
        "midi": false,
        "mousekey": true,
        "music": false,
        "nkro": true,
        "rgblight": true,
        "rgb_matrix": false,
        "unicode": false
    },
    "qmk": {
        "tap_keycode_delay": 2
    },
    "tapping": {
        "toggle": 3
    },
    "caps_word": {
        "enabled": true,
        "double_tap_shift_turns_on": true
    },
    "rgblight": {
        "led_count": 1,
        "default": {
            "on": false
        },
        "driver": "ws2812",
        "layers": {
            "enabled": true
        },
        "max_brightness": 128
    },
    "split": {
        "enabled": true,
        "serial": {
            "driver": "usart"
        }
    },
    "ws2812": {
        "driver": "pwm",
        "pin": "A9"
    },
    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "rows": [ "A15", "B3", "B4", "B5" ],
        "cols": [ "A4",  "A5", "A6", "A7", "B0", "B1" ]
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix": [0, 0], "x":  0, "y": 0.75},
                {"matrix": [0, 1], "x":  1, "y": 0.25},
                {"matrix": [0, 2], "x":  2, "y": 0},
                {"matrix": [0, 3], "x":  3, "y": 0},
                {"matrix": [0, 4], "x":  4, "y": 0.25},
                {"matrix": [0, 5], "x":  5, "y": 0.75},

                {"matrix": [4, 0], "x":  7, "y": 0.75},
                {"matrix": [4, 1], "x":  8, "y": 0.25},
                {"matrix": [4, 2], "x":  9, "y": 0},
                {"matrix": [4, 3], "x": 10, "y": 0},
                {"matrix": [4, 4], "x": 11, "y": 0.25},
                {"matrix": [4, 5], "x": 12, "y": 0.75},

                {"matrix": [1, 0], "x":  0, "y": 1.75},
                {"matrix": [1, 1], "x":  1, "y": 1.25},
                {"matrix": [1, 2], "x":  2, "y": 1},
                {"matrix": [1, 3], "x":  3, "y": 1},
                {"matrix": [1, 4], "x":  4, "y": 1.25},
                {"matrix": [1, 5], "x":  5, "y": 1.75},

                {"matrix": [5, 0], "x":  7, "y": 1.75},
                {"matrix": [5, 1], "x":  8, "y": 1.25},
                {"matrix": [5, 2], "x":  9, "y": 1},
                {"matrix": [5, 3], "x": 10, "y": 1},
                {"matrix": [5, 4], "x": 11, "y": 1.25},
                {"matrix": [5, 5], "x": 12, "y": 1.75},

                {"matrix": [2, 1], "x":  1, "y": 2.25},
                {"matrix": [2, 2], "x":  2, "y": 2},
                {"matrix": [2, 3], "x":  3, "y": 2},
                {"matrix": [2, 4], "x":  4, "y": 2.25},

                {"matrix": [6, 1], "x":  8, "y": 2.25},
                {"matrix": [6, 2], "x":  9, "y": 2},
                {"matrix": [6, 3], "x": 10, "y": 2},
                {"matrix": [6, 4], "x": 11, "y": 2.25},

                {"matrix": [3, 0], "x": 3.75, "y": 3.25},
                {"matrix": [3, 1], "x": 4.75, "y": 3.25, "w": 1.5},

                {"matrix": [7, 0], "x": 6.75, "y": 3.25, "w": 1.5},
                {"matrix": [7, 1], "x": 8.25, "y": 3.25}
            ]
        }
    }
}
