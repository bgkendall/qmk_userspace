{
    "keyboard_name": "Madame Pearls Macro Pad",
    "processor": "atmega32u4",
    "bootloader": "caterina",
    "debounce": 5,
    "diode_direction": "COL2ROW",
    "build": {
        "lto": true
    },
    "features": {
        "audio": false,
        "backlight": false,
        "bluetooth": false,
        "bootmagic": false,
        "bootmagic_lite": true,
        "combo": false,
        "command": false,
        "console": false,
        "encoder": true,
        "encoder_map": true,
        "extrakey": true,
        "magic": false,
        "midi": false,
        "mousekey": true,
        "music": false,
        "nkro": false,
        "rgblight": true,
        "unicode": false
    },
    "matrix_pins": {
        "rows": ["F7", "D7", "E6", "B4", "B5"],
        "cols": ["B1", "D1", "C6", "D4"]
    },
    "encoder": {
        "rotary": [
            { "pin_a": "D3", "pin_b": "D2"}
        ]
    },
    "rgblight": {
        "led_count": 12,
        "hue_steps": 4,
        "saturation_steps": 17,
        "brightness_steps": 17,
        "max_brightness": 128,
        "sleep": true,
        "animations": {
            "alternating": true,
            "breathing": true,
            "christmas": false,
            "knight": true,
            "rainbow_mood": true,
            "rainbow_swirl": true,
            "rgb_test": false,
            "snake": true,
            "static_gradient": true,
            "twinkle": false
        },
        "layers": {
            "blink": true,
            "enabled": true,
            "max": 22,
            "override_rgb": true
        }
    },
    "ws2812": {
        "pin": "F4"
    },
    "tapping": {
        "toggle": 3
    },
    "usb": {
        "device_version": "1.0.1",
        "pid": "0x4D50",
        "max_power": 100
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix":[1,1], "x":0, "y":0}, {"matrix":[1,2], "x":1, "y":0}, {"matrix":[1,3], "x":2, "y":0},
                    {"label":"enc. sw", "matrix":[0,0], "x":4.5, "y":0.75},
                {"matrix":[2,1], "x":0, "y":1}, {"matrix":[2,2], "x":1, "y":1}, {"matrix":[2,3], "x":2, "y":1},
                    {"label":"enc. up", "matrix":[1,0], "x":3.5, "y":0.25},
                {"matrix":[3,1], "x":0, "y":2}, {"matrix":[3,2], "x":1, "y":2}, {"matrix":[3,3], "x":2, "y":2},
                    {"label":"enc. dn", "matrix":[2,0], "x":3.5, "y":1.25},
                {"matrix":[4,1], "x":0, "y":3}, {"matrix":[4,2], "x":1, "y":3}, {"matrix":[4,3], "x":2, "y":3},
                    {"label":"layer col.", "matrix":[4,0], "x":4.75, "y":3.25, "w":0.75, "h":0.75}
            ]
        }
    }
}
